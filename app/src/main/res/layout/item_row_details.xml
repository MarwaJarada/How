<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginStart="@dimen/vertical_margin_short"
    android:layout_marginEnd="@dimen/vertical_margin_short"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_video_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="@dimen/horizontal_margin_short"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/item_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_video_image"
            android:layout_margin="@dimen/horizontal_margin_short"
            android:layout_toEndOf="@id/item_video_image"
            android:text="placeHolder"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/item_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_video_image"
            android:layout_margin="@dimen/horizontal_margin_short"
            android:layout_toEndOf="@id/item_video_image"
            android:text="time"
            android:textSize="16sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>